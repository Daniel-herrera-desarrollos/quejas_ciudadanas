@{
    bool ocultarMenu = ViewBag.OcultarMenu == true;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Alertas ciudadanas</title>

    @if (!ocultarMenu)
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/quejas_ciudadanas.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    }
</head>
<body>
    @if (!ocultarMenu)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 navegador_principal">
                <div class="container-fluid div_menu_principal">
                    <a class="navbar-brand icono_menu" href="#">Alertas ciudadanas</a>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
@*                             <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li> *@
                            <li class="nav-item li_menu_navega">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reportes" asp-action="Index">Casos</a>
                            </li>
                            <li class="nav-item li_menu_navega">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Reportes" asp-action="crear_reporte">Nuevo reporte</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <!-- Preloader -->
        <div id="preloader">
            <div class="loader"></div>
        </div>
    }

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @if (!ocultarMenu)
    {
        <footer class="border-top footer text-muted footer_final">
            <div class="container">
                &copy; 2025 - UNAD GRUPO 202016907_75 - PROYECTO DE GRADO - (202016907A_2031) 
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    }
</body>
</html>
